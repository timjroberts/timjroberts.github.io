		"@fortawesome/fontawesome-free": "^6.5"
	},
	"devDependencies": {
		"vite": "^4.0",
		"@vitejs/plugin-react": "^4.2",
		"sass": "^1.69",
    "@types/react": "^18.2",
    "@types/react-dom": "^18.2"
	},
	"nx": {
		"implicitDependencies": [
			"content"
		]
	}
}
